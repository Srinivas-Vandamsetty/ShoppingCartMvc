<ul class="navbar-nav">
    @if (Context.Session.GetString("UserEmail") != null)
    {
        <li class="nav-item">
            <span class="navbar-text">Hello, @Context.Session.GetString("UserEmail")</span>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-danger text-white ms-2" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link btn btn-success text-white ms-2" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-success text-white ms-2" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>
